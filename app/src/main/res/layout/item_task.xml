<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="#0FDEDE"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <CheckBox
            android:id="@+id/cbTaskComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/purple_700"/>

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Tugas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toEndOf="@id/cbTaskComplete"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:id="@+id/ivTaskDelete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/baseline_delete_24"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTaskTitle"
            android:text="Deskripsi Tugas"
            android:textSize="13sp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/cbTaskComplete"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvTaskDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#444444"
            android:layout_below="@id/tvTaskDescription"
            android:layout_toEndOf="@id/cbTaskComplete"
            android:layout_marginStart="12dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>